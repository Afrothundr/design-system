{
  "include": [
    "src/*.ts",
    "node_modules",
    "tests/*.ts"
  ],
  "compilerOptions": {
    "target": "es2015",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  }
}
